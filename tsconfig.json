{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"pretty": true,
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"noUnusedParameters": true,
		"maxNodeModuleJsDepth": 0,
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": ["webpack-env"],
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"es2018",
			"es2019",
			"es2020",
			"es5",
			"es6",
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"exclude": ["node_modules", ".git", "dist"],
	"typeAcquisition": { "enable": true },
	"include": ["./*", "./**/*", "./.*/**/*"]
}
